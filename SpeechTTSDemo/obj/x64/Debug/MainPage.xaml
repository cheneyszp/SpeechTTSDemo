<Page
    x:Class="SpeechTTSDemo.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SpeechTTSDemo"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.Resources>
        <local:ScenarioBindingConverter x:Key="ScenarioConverter"></local:ScenarioBindingConverter>
    </Page.Resources>
    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <SplitView x:ConnectionId='1' x:Name="splitView" IsPaneOpen="True" HorizontalAlignment="Left" Height="455" Margin="0,105,0,0" VerticalAlignment="Top" Width="1280" DisplayMode="Inline">
            <SplitView.Pane>
                <RelativePanel Height="455" VerticalAlignment="Top" HorizontalAlignment="Left" Width="320">
                    <ListBox x:ConnectionId='8' x:Name="listBox" HorizontalAlignment="Left" Height="445" VerticalAlignment="Top" Width="316"                                             Margin="0,0,-164,-445">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Converter={StaticResource ScenarioConverter}}"/>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </RelativePanel>
            </SplitView.Pane>
            <RelativePanel Height="455" VerticalAlignment="Top" Margin="10,0,0,0" >
                <Frame x:ConnectionId='9' x:Name="ScenarioFrame" Margin="0,5,0,0" RelativePanel.AlignTopWithPanel="True" RelativePanel.AlignBottomWithPanel="True" RelativePanel.AlignRightWithPanel="True" RelativePanel.AlignLeftWithPanel="True" Background="Transparent"/>
            </RelativePanel>
        </SplitView>
        <StackPanel x:ConnectionId='2' x:Name="headPanel" HorizontalAlignment="Left" Height="140" VerticalAlignment="Top" Background="{ThemeResource ContentDialogBackgroundThemeBrush}" Width="1270">
             <TextBlock x:ConnectionId='5' x:Name="statusText" TextWrapping="Wrap" FontSize="30" Text="状态显示"/>
            <TextBlock x:ConnectionId='6' x:Name="Header" Text="语音命令以及TTS示例" FontSize="20" Margin="63,15,0,0" RenderTransformOrigin="0.501,1.076" />
            <TextBlock x:ConnectionId='7' x:Name="textBlock" TextWrapping="Wrap" FontSize="16" Text="TextBlock" Margin="63,0,0,0"/>
        </StackPanel>
        <StackPanel x:ConnectionId='3' x:Name="footPanel" HorizontalAlignment="Left" Height="145" Margin="0,565,0,0" VerticalAlignment="Top" Width="1270">
            
            <MediaElement x:ConnectionId='4' x:Name="media" AutoPlay="False"                              />
        </StackPanel>
    </Grid>
</Page>

